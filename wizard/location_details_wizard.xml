<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="location_details_report_view" model="ir.ui.view">
            <field name="name">report location details</field>
            <field name="model">report.location_details_report_pdf</field>
            <field name="arch" type="xml">
                <form string="Reporte Detallado de Almacenes">
                    <footer>
                        <button string="Crear Reporte" name="render_html" type="object" class="oe_highlight"/>
                        or
                        <button string="Cerar" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_location_details_wizard" model="ir.actions.act_window">
            <field name="name">Reporte Detallado de Almacen</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">report.location_details_report_pdf</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="location_details_report_view"/>
            <field name="target">new</field>
        </record>
        
        <menuitem id="menu_report_locations"
            parent="stock.menu_stock_root"
            name="Reportes de Almacen"
            sequence="5"/>
        <menuitem id="location_details_wizard_view"
            parent="menu_report_locations"
            name="Reporte detallado de Almacen"
            action="action_location_details_wizard"/>

    </data>
</openerp>
